extends ./music_layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/music",enctype="multipart/form-data")
        .form-group
          label.col-sm-2.control-label 豆瓣音乐同步
          .col-sm-10
            input#doubanMusic.form-control(type="text")
        if music._id
          input(type="hidden", name="music[_id]", value=music._id)
        .form-group
          label.col-sm-2.control-label(for="inputMusicCategory") 音乐分类
          .col-sm-10
            input#inputMusicCategory.form-control(type="text", name="music[musicCategoryName]", value=music.musicCategoryName)
        .form-group
          label.col-sm-2.control-label 分类选择
          .col-sm-10
            each cat in musicCategories
              label.radio-inline
                if music._id
                  input(type="radio", name="music[musicCategory]", value=cat._id, checked=cat._id.toString()==music.musicCategory.toString())
                else
                  input(type="radio", name="music[musicCategory]", value=cat._id)
                | #{cat.name}
        .form-group
          label.col-sm-2.control-label(for="inputMusicTitle") 音乐名字
          .col-sm-10
            input#inputMusicTitle.form-control(type="text", name="music[title]", value=music.title)
        .form-group
          label.col-sm-2.control-label(for="inputMusicAltTitle") 别名
          .col-sm-10
            input#inputMusicAltTitle.form-control(type="text", name="music[altTitle]", value=music.altTitle)
        .form-group
          label.col-sm-2.control-label(for="inputMusicSinger") 歌手
          .col-sm-10
            input#inputMusicSinger.form-control(type="text", name="music[singer]", value=music.singer)
        .form-group
          label.col-sm-2.control-label(for="inputMusicVersion") 专辑类型
          .col-sm-10
            input#inputMusicVersion.form-control(type="text", name="music[version]", value=music.version)
        .form-group
          label.col-sm-2.control-label(for="inputMusicMedia") 介质
          .col-sm-10
            input#inputMusicMedia.form-control(type="text", name="music[media]", value=music.media)
        .form-group
          label.col-sm-2.control-label(for="inputMusicImage") 歌曲封面
          .col-sm-10
            input#inputMusicImage.form-control(type="text", name="music[image]", value=music.image)
        .form-group
          label.col-sm-2.control-label(for="uploadMusicImage") 海报上传
          .col-sm-10
            input#uploadMusicImage(type="file", name="uploadMusicImage")
        .form-group
          label.col-sm-2.control-label(for="inputMusicPubdate") 发行时间
          .col-sm-10
            input#inputMusicPubdate.form-control(type="text", name="music[pubdate]", value=music.pubdate)
        .form-group
          label.col-sm-2.control-label(for="inputMusicSummary") 歌曲简介
          .col-sm-10
            textarea#inputMusicSummary.form-control(type="text", name="music[summary]")= music.summary
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type="submit") 录入
  script(src='/scripts/js/music/music_admin.js')
